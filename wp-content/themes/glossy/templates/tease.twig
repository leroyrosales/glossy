<article class="tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
	{% block content %}
		<div class="card">
			<div class="card-header rounded-0 bg-secondary" id="heading{{ post.title }}">
				<h3 class="h4 mb-0">
					<button class="btn btn-link stretched-link text-white" data-toggle="collapse" data-target="#collapse{{ post.id }}" aria-expanded="false" aria-controls="collapse{{ post.id }}">
						{{post.title}}
					</button>
				</h3>
			</div>
			<div id="collapse{{ post.id }}" class="collapse" aria-labelledby="heading{{ post.title }}" data-parent="#accordion">
				<div class="card-body">
					{{post.content}}
				</div>
			</div>
		</div>
	{% endblock %}
</article>
