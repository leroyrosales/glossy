{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text sr-only sr-only-focusable" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header bg-primary">
			{% block header %}
				<div class="wrapper container">
					<div class="row mb-4 py-2 d-flex align-items-center">
						<div class="col-3">
							<h1 class="hdr-logo text-white" role="banner">
								{{site.name}}
							</h1>
						</div>
						<div class="col">
							<nav id="nav-main" class="nav-main" role="navigation">
								{% include "menu.twig" with {'items': menu.get_items} %}
							</nav><!-- #nav -->
						</div>
					</div>
				</div>
			{% endblock %}
		</header>

		<main id="content" role="main" class="content-wrapper container">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</main>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
				{% include 'footer-js.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
